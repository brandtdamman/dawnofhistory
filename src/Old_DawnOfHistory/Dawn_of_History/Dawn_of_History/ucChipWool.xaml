<UserControl x:Class="Dawn_of_History.ucChipWool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Border Width="50" Height="50" CornerRadius="25" 
                Background="{StaticResource brsChipWool}">
            <Border Height="20" Width="20" Margin="2" CornerRadius="10"
                    VerticalAlignment="Bottom"
                    Background="{Binding Path=PlayerColor, FallbackValue=Black}" >
                
                <TextBlock Name="CNum4" Text="{Binding Path=WoolCard, FallbackValue=1}" 
                           Foreground="White" VerticalAlignment="Center"
                           FontFamily="Papyrus" FontWeight="Bold" FontSize="12"
                           TextAlignment="Center" />
                
            </Border>
        </Border>
    </Grid>
</UserControl>
